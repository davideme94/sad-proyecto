{
  "version": 2,
  "headers": [
    { "source": "/api/(.*)", "headers": [{ "key": "Cache-Control", "value": "no-store" }] },
    { "source": "/app.js",   "headers": [{ "key": "Cache-Control", "value": "no-store" }] }
  ],
  "routes": [
    { "handle": "filesystem" },
    { "src": "^/api/.*", "dest": "/api/index.js" },
    { "src": "/(.*)", "dest": "/index.html" }
  ]
}
